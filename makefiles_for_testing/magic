CC=clang
CFLAGS=-c -Wall
LDFLAGS=
SOURCES=hello_world.c second_file.c
OBJECTS=$(SOURCES:.c=.o)
EXECUTABLE=hello

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $@

.c.o:
	$(CC) $(CFLAGS) $< -o $@

# `make clean` removes .o files and compiled program
clean:
	rm -f *.o $(EXECUTABLE)